<!--  Seach Bar -->
{{#if search}}
  <form class="form-inline my-2 my-lg-0" id="search-bar">
    <input class="form-control mr-sm-2" type="search" placeholder="Search">
  </form>
{{/if}}

<!--  Add link -->
<a id="add-button" class="nav-link" href="/internship/add">Add</a>

<!-- Internships -->
<div class="down">
  {{#each internships}}
    <h1 id= {{this.company}}>{{this.company}}
      <button type="button" id="like-{{this.company}}" name="like-{{this.company}}">&uarr; - <span>{{this.popularity}}<span></button>
    </h1>
  {{/each}}
  <div class="empty" style="display: none; text-align: center;">
    <h2>Nothing matches your search (case sensitive)</h2>
  </div>
</div>
